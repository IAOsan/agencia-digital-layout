mixin gallery(...images)
   .row.no-gutters
      each image,index in images
         .col-md-3
            a(href="#" data-toggle="modal" data-target=`#imagen-${index+1}`)
               img.img-fluid(src=`assets/img/${image}`, alt="")
            .modal.fade(id=`imagen-${index+1}` tabindex="-1" aria-hidden="true")
               .modal-dialog.modal-dialog-centered.modal-lg
                  .modal-content
                     img.img-fluid(src=`assets/img/${image}`, alt="")